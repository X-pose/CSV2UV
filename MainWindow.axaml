<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        MinWidth="800" MinHeight="600"
        x:Class="UVMapConverter.MainWindow"
        Title="CSV2UV - Convert CSV files to UV maps instantly" Width="800" Height="600"
        Icon="/Assets/icon.ico"
        RequestedThemeVariant="Dark"
        WindowStartupLocation="CenterScreen">
        
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="CSV" Foreground="#ffb140" FontSize="24" FontWeight="Bold"/>
            <TextBlock Grid.Column="1" Text="2" FontSize="24" FontWeight="Bold"/>
            <TextBlock Grid.Column="2" Text="UV" Foreground="#ffb140" FontSize="24" FontWeight="Bold"/>
            </Grid>
            
            <TextBlock Text="Generate UV Maps from CSV files" 
                    FontSize="14" Foreground="#C3C5C7" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>  
            </Grid.ColumnDefinitions>

            <!-- Drop Zone / Preview Area -->
            <Border Grid.Column="0" Classes="dropZone" 
                    Name="DropZone"
                    DragDrop.AllowDrop="True"
                    ClipToBounds="True"
                    Background="Transparent"
                    Margin="0,0,20,0">
                <Panel>
                    <!-- Drop Zone (visible when no image) -->
                    <StackPanel Name="DropZoneContent" 
                                HorizontalAlignment="Stretch" 
                                VerticalAlignment="Center"
                                Background="Transparent"
                                IsVisible="True">
                        <PathIcon Data="M13,9H18.5L13,3.5V9M6,2H14L20,8V20A2,2 0 0,1 18,22H6C4.89,22 4,21.1 4,20V4C4,2.89 4.89,2 6,2M15,18V16H6V18H15M18,14V12H6V14H18Z"
                                Width="56" Height="56" 
                                Foreground="#FFB140"
                                HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop CSV file here" 
                                HorizontalAlignment="Center"
                                Margin="0,20,0,10"/>
                        <TextBlock Text="OR" 
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20"/>
                        <Button Content="Browse Files" 
                                Name="BrowseButton"
                                Foreground="Black"
                                HorizontalAlignment="Center"
                                Padding="20,10"/>
                    </StackPanel>

                    <!-- Preview Area (visible when image loaded) -->
                    <ZoomBorder Name="ZoomBorder" 
                    IsVisible="False"
                    Stretch="Uniform"
                    ZoomSpeed="1.2"
                    EnablePan="True"
                    EnableZoom="True"
                    ClipToBounds="True"
                    Background="Transparent">
                        <ScrollViewer Name="PreviewScroller" IsVisible="False">
                            <Image Name="PreviewImage" Stretch="Uniform" />
                        </ScrollViewer>
                    </ZoomBorder>
                </Panel>
            </Border>

            <!-- Settings Panel -->
            <Border Grid.Column="1" 
                    
                    CornerRadius="8" 
                    Padding="20"
                    Classes="settingsPanel"
                    >

                <StackPanel Spacing="15">
                    <TextBlock Text="Export Settings" Foreground="#ffb140" FontSize="18" FontWeight="Bold"/>
                    
                    <Separator />

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <!-- Image Size -->
                        <StackPanel Grid.Column="0" Spacing="8" >
                            <TextBlock Text="Image Size" FontWeight="SemiBold" />
                            <ComboBox Name="SizeComboBox" SelectedIndex="2" Width="150" HorizontalAlignment="Left">
                                <ComboBoxItem Content="512 x 512"/>
                                <ComboBoxItem Content="1024 x 1024"/>
                                <ComboBoxItem Content="2048 x 2048"/>
                                <ComboBoxItem Content="4096 x 4096"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Background Color -->
                        <StackPanel Grid.Column="1" Spacing="8" Margin="15,0,0,0">
                            <TextBlock Text="Background Color" FontWeight="SemiBold"/>
                            <ComboBox Name="BackgroundComboBox" SelectedIndex="0" Width="150" HorizontalAlignment="Left">
                                <ComboBoxItem Content="Transparent"/>
                                <ComboBoxItem Content="White"/>
                                <ComboBoxItem Content="Black"/>
                                <ComboBoxItem Content="Gray"/>
                            </ComboBox>
                        </StackPanel>    
                    </Grid>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <!-- Line Color -->
                        <StackPanel Grid.Column="0" Spacing="8" >
                            <TextBlock Text="Line Color" FontWeight="SemiBold"/>
                            <ComboBox Name="LineColorComboBox" SelectedIndex="0" Width="150" HorizontalAlignment="Left">
                                <ComboBoxItem Content="White"/>
                                <ComboBoxItem Content="Black"/>
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="Blue"/>
                                <ComboBoxItem Content="Green"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Export Format -->
                        <StackPanel Grid.Column="1" Spacing="8" Margin="15,0,0,0">
                            <TextBlock Text="Export Format" FontWeight="SemiBold"/>
                            <ComboBox Name="FormatComboBox" SelectedIndex="0" Width="150" HorizontalAlignment="Left">
                                <ComboBoxItem Content="PNG"/>
                                <ComboBoxItem Content="JPEG"/>
                                <ComboBoxItem Content="BMP"/>
                                <ComboBoxItem Content="WEBP"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Line Thickness -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Line Thickness" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Slider Name="ThicknessSlider" 
                                    Minimum="1" Maximum="10" 
                                    Value="2" 
                                    Width="150"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"/>
                            <TextBlock Name="ThicknessText" Text="2 px" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    

                    <Separator Name="Separator2" IsVisible="False"/>
                    <!-- Action Buttons -->
                    <StackPanel Name="ActionPanel" Spacing="10" IsVisible="False" Margin="0,10,0,0">
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>
                                <Button Content="Clear" 
                                    Name="ClearButton"
                                    Width="150"
                                    HorizontalAlignment="Left"
                                    Background="#202121"
                                    BorderBrush="#FFB140"
                                    BorderThickness="2"
                                    HorizontalContentAlignment="Center"/>
                                <Button Grid.Column="1" Content="Export" 
                                        Name="SaveButton"
                                        Width="150"
                                        Foreground="Black"
                                        HorizontalAlignment="Left"
                                        HorizontalContentAlignment="Center"
                                        Margin="15,0,0,0"/>
                        </Grid>
                        
                        
                    </StackPanel>
                        
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                BorderBrush="#FFB140"
                BorderThickness="2"
                CornerRadius="4" 
                Padding="10"
                MaxHeight="100"
                Margin="0,20,0,0">
            <TextBlock Name="StatusText" TextWrapping="Wrap" Text="Ready" TextAlignment="Center" FontWeight="DemiBold"/>
        </Border>
    </Grid>
   
</Window>